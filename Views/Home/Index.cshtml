    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Select all product items
            const products = document.querySelectorAll('.gold-item');

            // Select the navigation links
            const shoesLink = document.getElementById('shoes');
            const electronicsLink = document.getElementById('electronics');
            const frunitureLink = document.getElementById('fruniture');
            const cleaningLink = document.getElementById('cleaning');
            const tvLink = document.getElementById('tv');
            const toysLink = document.getElementById('toys');
            const mobileLink = document.getElementById('mobile');

            // Add event listeners to the navigation links
            shoesLink.addEventListener('click', function () {
                filterProducts('shoes');
            });

            electronicsLink.addEventListener('click', function () {
                filterProducts('electronics');
            });

            frunitureLink.addEventListener('click', function () {
                filterProducts('fruniture');
            });

            cleaningLink.addEventListener('click', function () {
                filterProducts('cleaning');
            });

            tvLink.addEventListener('click', function () {
                filterProducts('tv');
            });

            toysLink.addEventListener('click', function () {
                filterProducts('toys');
            });

            mobileLink.addEventListener('click', function () {
                filterProducts('mobile');
            });

            function filterProducts(category) {
                // Iterate through each product item
                products.forEach(product => {
                    // Check if the product's category matches the selected category
                    if (product.dataset.category === category) {
                        // Show the product
                        product.style.display = 'block';
                    } else {
                        // Hide the product
                        product.style.display = 'none';
                    }
                });
            }
        });
    </script>
